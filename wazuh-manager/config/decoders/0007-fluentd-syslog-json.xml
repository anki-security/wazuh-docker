<!--
  Fluentd Syslog-wrapped JSON Decoder
  
  Extracts JSON from syslog messages sent by Fluentd via remote_syslog plugin.
  Format: <134>Oct 11 16:40:25 sensor-mikrotik fluentd: {"log_source":"mikrotik",...}
  
  This decoder matches "fluentd: {" and decodes everything after as JSON.
-->

<decoder name="fluentd-json">
  <prematch>fluentd: {</prematch>
  <plugin_decoder offset="after_prematch">JSON_Decoder</plugin_decoder>
</decoder>
