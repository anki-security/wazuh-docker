{
  "description": "Generic Syslog Parsing Pipeline - Basic RFC3164/RFC5424 support",
  "processors": [
    {
      "grok": {
        "field": "message",
        "patterns": [
          "^<%{POSINT:log.syslog.priority}>%{INT:syslog.version} %{TIMESTAMP_ISO8601:syslog.timestamp} %{DATA:observer.hostname} %{DATA:process.name} %{DATA:process.pid} %{DATA:event.code} %{GREEDYDATA:message.text}",
          "^<%{POSINT:log.syslog.priority}>%{SYSLOGTIMESTAMP:syslog.timestamp} %{DATA:observer.hostname} %{DATA:process.name}(\\[%{POSINT:process.pid}\\])?: %{GREEDYDATA:message.text}",
          "^%{GREEDYDATA:message.unparsed}$"
        ],
        "ignore_failure": true
      }
    },
    {
      "script": {
        "lang": "painless",
        "source": "if (ctx.log?.syslog?.priority != null) { int priority = ctx.log.syslog.priority; ctx.log.syslog.facility = ['code': priority >> 3]; ctx.log.syslog.severity = ['code': priority & 7]; }",
        "ignore_failure": true
      }
    },
    {
      "set": {
        "field": "observer.type",
        "value": "syslog"
      }
    },
    {
      "set": {
        "field": "ecs.version",
        "value": "8.12.0"
      }
    },
    {
      "append": {
        "field": "event.category",
        "value": ["host"],
        "allow_duplicates": false
      }
    }
  ],
  "on_failure": [
    {
      "set": {
        "field": "error.message",
        "value": "{{ _ingest.on_failure_message }}"
      }
    },
    {
      "set": {
        "field": "event.kind",
        "value": "pipeline_error"
      }
    }
  ]
}
